{
  "compilerOptions": {

    "target": "es2016",                                  
    "jsx": "react-jsx",                                
    "module": "ESNext",                                
    "rootDir": "./src",                                  
    "moduleResolution": "node",                     
    "resolveJsonModule": true,                        
    "declaration": true,                              
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*"
  ]
}